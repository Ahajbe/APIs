{
  "displayName":"Stackexchange",
  "icon":"",
  "base_url":"https://api.stackexchange.com/2.1/",
  "default_auth":"oauth2",
  "auth":{
    "none":{},
    "manual":{
      "request":{
        "format": "json",
        "get":{
          "key":"{key}"
        }
      }
    },
    "oauth2":{ 
      "authorize":{ 
        "url":"https://stackexchange.com/oauth", 
        "params":{ 
          "client_id":"{client_id}", 
          "redirect_uri":"{_callback_url}",
          "state":"{_callback_args}",
          "scope":"{scope}" 
        }
      },
      "access_token":{
        "url":"https://stackexchange.com/oauth/access_token",
        "field":"state",
        "format":"url",
        "method":"post",
        "params":{
          "client_id":"{client_id}",
          "client_secret":"{client_secret}",
          "redirect_uri":"{_callback_url}",
          "code":"{_code}"
        }
      },
      "request":{
        "get":{
          "access_token":"{_access_token}",
          "key":"{key}"
        },
        "format": "json"
      }, 
      "parameters":[ 
        { "name":"client_id", "type":"string" },
        { "name":"client_secret", "type":"string" },
        { "name":"scope", "type":"string",
	"separator":" ",
	"cardinality":"*",
	"values": {
		  "read_inbox":"access a user's global inbox",
		  "no_expiry":"access_token's with this scope do not expire",
		  "write_access":"perform write operations as a user",
		  "private_info":"access full history of a user's private actions on the site."
	} 
	}
      ]
    }
  },
  "parameters":[
    { "name":"key", "type":"string" }
  ]
}
