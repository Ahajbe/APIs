{ 
	"displayName":"Instagram",
	"icon":"",
	"base_url":"",
  "default_auth":"oauth2",
  "auth": {
    "oauth2": {
      "authorize": {
        "url":"https://api.instagram.com/oauth/authorize",
        "format":"json",
        "params": {
          "client_id":"{client_id}",
          "response_type":"code",
          "redirect_uri":"http://{_wsdomain}.webshell.local/name/{_name}",
          "state":"api={_id}&cip={_cid}",
          "scope":"{scope}"
        }
      },
      "access_token":{
        "url":"https://api.instagram.com/oauth/access_token",
        "format":"json",
        "field":"state",
        "method":"post",
        "params":{
          "client_id":"{client_id}",
          "client_secret":"{client_secret}",
          "redirect_uri":"http://{_wsdomain}.webshell.local/name/{_name}",
          "grant_type":"authorization_code",
          "code":"{_code}"
        }
      },
      "request":{
	    "format":"json",
        "get":{
          "oauth_token":"{_access_token}"
        }
      },
      "parameters":[
        {
          "name":"client_id",
          "type":"string"
        },
        {
          "name":"client_secret",
          "type":"string"
        },
        {
          "name":"scope",
          "type":"string"
        }
      ]
    }
  }
}