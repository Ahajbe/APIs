{
  "displayName":"Disqus",
  "icon":"",
  "base_url":"",
  "default_auth":"oauth2",
  "auth": {
    "oauth2": {
      "authorize": {
        "url":"https://disqus.com/api/oauth/2.0/authorize/",
        "params": {
          "client_id":"{client_id}",
          "response_type":"code",
          "redirect_uri":"{_callback_url}",
          "state":"{_callback_args}",
	  "scope":"{scope}"
        }
      },
      "access_token":{
        "url":"https://disqus.com/api/oauth/2.0/access_token/",
        "field":"state",
        "method":"post",
        "params":{
          "client_id":"{client_id}",
          "client_secret":"{client_secret}",
          "redirect_uri":"{_callback_url}",
          "grant_type":"authorization_code",
          "code":"{_code}"
        }
      },
      "request":{
	    "format":"json",
        "get":{
          "oauth_token":"{_access_token}"
        }
      },
      "parameters":[
        {
          "name":"client_id",
          "type":"string"
        },
        {
          "name":"client_secret",
          "type":"string"
        },
        {
          "name":"scope",
          "type":"string",
	"separator":",",
	"cardinality":"*",
	"values": {
		  "read":"Read access on data.",
	 	  "write":"Write access on data.",
		  "admin":"Forum moderation capabilities."
		  }
        }
      ]
    }
  }
}